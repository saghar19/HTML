<script type="text/javascript">

	function  ifRain()
	{
		let Rain=parseInt(prompt('Is it raining? 1-Yes / 2-no /3-I live  in vancouver / 4-is it fall'),10);
		switch(Rain)


		{case 1: alert('take umbrella');
	     break;
	     case 2:alert('Do not take umbrella');
	     break;
	     case 3: alert('Always take umbrella') ;
	     break;
	     case 4: alert('its better take umbrella');
	     break;
	     default: ifRain();
	 }

			
    }


    function fruit()
    {

    let fruit="mango";
    let userInput = prompt=("what is your favorite fruit")
    if(userInput.toLowerCase()==fruit)
    	{alert("you win the mango prize");
}
else{alert("you lost")
}
}

    function number()
    {
    	
    	for (var input=1; input<=10; input++)
    		{console.log(input);}

    }

</script>

<body>
	<h1>Switch</h1>
	<button onclick="ifRain()">check Rain</button>
	<br><hr>
	<h1>If Statement</h1>
<button onclick="ifRain()">check Rain</button>
<br><hr><h1>switch</h1>
<button onclick="fruit()">check fruit</button>
<br><hr>
